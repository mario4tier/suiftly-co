{
  "name": "@suiftly/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./billing": "./src/billing/index.ts",
    "./stats": "./src/stats/index.ts",
    "./sui-mock": "./src/sui-mock/index.ts",
    "./sui-seal": "./src/sui-seal/index.ts",
    "./test-kv": "./src/test-kv/index.ts",
    "./stripe-mock": "./src/stripe-mock/index.ts",
    "./stripe-service": "./src/stripe-service/index.ts"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/migrate.ts && tsx src/timescale-setup.ts",
    "db:push": "drizzle-kit push && tsx src/timescale-setup.ts",
    "db:studio": "drizzle-kit studio",
    "db:timescale": "tsx src/timescale-setup.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@mhaxbe/system-config": "*",
    "@suiftly/shared": "*",
    "@trpc/server": "^11.1.1",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.13.1",
    "stripe": "^20.3.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.31.6",
    "vitest": "^4.0.0"
  }
}
